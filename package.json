{
  "name": "zoapi",
  "version": "0.1.2",
  "description": "An ergonomic way to generate OpenAPI schemas using Zod",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/maybemaby/zoapi"
  },
  "scripts": {
    "test": "vitest",
    "lint": "biome lint",
    "format": "biome format",
    "check": "biome check",
    "build": "tsup"
  },
  "keywords": [
    "openapi",
    "zod"
  ],
  "exports": {
    ".": {
      "types": "./dist/api.d.ts",
      "import": "./dist/api.js",
      "require": "./dist/api.cjs"
    }
  },
  "author": "https://github.com/maybemaby",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.8.4",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "zod-openapi": "^3.3.0"
  },
  "peerDependencies": {
    "zod": "^3.23.8"
  }
}